{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug STT",
            "type": "debugpy",
            "request": "launch",
            "module": "wyoming_microsoft_stt",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
            },
            "args": [
                "--download-dir",
                "./temp/",
                "--service-region",
                "canadacentral",
                "--profanity",
                "off",
                "--update-languages",
                "--debug",
                "--uri",
                "tcp://0.0.0.0:10300"
            ]
        },
    ]
}